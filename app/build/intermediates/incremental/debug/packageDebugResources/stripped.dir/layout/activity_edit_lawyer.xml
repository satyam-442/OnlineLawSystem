<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    tools:context=".admin.lawyer.EditLawyerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Update Lawyer"
        android:textColor="@color/primaryDark"
        android:textSize="@dimen/_16sdp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLawyerFullname"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:hint="Lawyer Full Name"
        app:boxStrokeColor="@color/primaryDark"
        app:hintTextColor="@color/primaryDark">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/primaryDark"
            android:textColorHint="@color/primaryLight" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLawyerAge"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:hint="Lawyer Age"
        app:boxStrokeColor="@color/primaryDark"
        app:hintTextColor="@color/primaryDark">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/primaryDark"
            android:textColorHint="@color/primaryLight" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLawyerContact"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:hint="Lawyer Contact"
        app:boxStrokeColor="@color/primaryDark"
        app:hintTextColor="@color/primaryDark">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:textColor="@color/primaryDark"
            android:textColorHint="@color/primaryLight" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLawyerQualification"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:hint="Lawyer Qualification"
        app:boxStrokeColor="@color/primaryDark"
        app:hintTextColor="@color/primaryDark">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/primaryDark"
            android:textColorHint="@color/primaryLight" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:letterSpacing="0.1"
            android:text="Court : "
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <Spinner
            android:id="@+id/courtSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg"
            android:entries="@array/court_category" />
    </LinearLayout>

    <TextView
        android:id="@+id/editCourtSpinnerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/nunito"
        android:gravity="center_vertical"
        android:letterSpacing="0.1"
        android:textSize="@dimen/_10sdp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:letterSpacing="0.1"
            android:text="Expertise :"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <Spinner
            android:id="@+id/expertiseSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg"
            android:entries="@array/expertise_category" />

    </LinearLayout>

    <TextView
        android:id="@+id/editExpertiseSpinnerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/nunito"
        android:gravity="center_vertical"
        android:letterSpacing="0.1"
        android:textSize="@dimen/_10sdp"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateLawyerBtn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_35sdp"
        android:paddingHorizontal="@dimen/_25sdp"
        android:text="Update Lawyer"
        android:textColor="@color/primaryDark"
        app:rippleColor="@color/primaryLight" />

</LinearLayout>