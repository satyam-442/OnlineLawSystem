<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    tools:context=".lawyer.LawyerProfileActivity">

    <TextView
        android:id="@+id/lawyerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/nunito"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/lawyerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/lawyerContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/lawyerCourt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/lawyerQualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/lawyerExpertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/lawyerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>